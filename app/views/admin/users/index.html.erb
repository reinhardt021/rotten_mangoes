<h1>Rotten Mangoes Users</h1>

<%= paginate @users %>

<hr>
<table id="users_list">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Admin</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th colspan="2"></th>
    </tr>  
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><%= formatted_date(user.created_at) %></td>
        <td><%= formatted_date(user.updated_at) %></td>  
      </tr>
    <% end %>    
  </tbody>
</table>



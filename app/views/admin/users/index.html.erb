<br/>
<div class="well">
  <h1>Rotten Mangoed Users</h1>

  <%= paginate @users %><br/>
  <%= link_to 'Create New User', new_admin_user_path %>
  <div class="table-responsive">
    <table class="table" id="users_list">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Admin</th>
          <th>Created At</th>
          <th>Updated At</th>
          <th colspan="2"></th>
        </tr>  
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.firstname %></td>
            <td><%= user.lastname %></td>
            <td><%= user.email %></td>
            <td><%= user.admin %></td>
            <td><%= formatted_date(user.created_at) %></td>
            <td><%= formatted_date(user.updated_at) %></td>
            <td><%= link_to 'edit', edit_admin_user_path(user) %></td>  
            <td><%= link_to 'delete', "/admin/users/#{user.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>    
      </tbody>
    </table>
  </div>
</div>


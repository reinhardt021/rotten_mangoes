<%= form_for @movie, html: { multipart: true }, class: "form-horizontal" do |f| %>
  <% if @movie.errors.any? %>
    <div>
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :release_date, class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">
      <%= f.date_field :release_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :director, class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">
      <%= f.text_field :director, placeholder: "Director", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :runtime_in_minutes, class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">
      <%= f.number_field :runtime_in_minutes, placeholder: "Runtime in minutes", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">
      <%= f.text_area :description, placeholder: "Description", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :remote_image_url, "Image URL:", class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">
      <%= f.text_field :remote_image_url, placeholder: "Image URL", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.file_field :image %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary" %> 
  </div>
<% end %>
